<div class="container mt-5">
  <form action="" {{on 'submit' this.onSubmit}}>
    <div class="mb-3 row">
      <label for="inputUsername" class="col-sm-2 col-form-label">Username</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputUsername" placeholder="email@example.com" {{ on 'input' this.onUsernameChange}}>
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputEmail" placeholder="email" {{ on 'input' this.onEmailChange}}>
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
      <div class="col-sm-10">
        <input type="password" class="form-control" id="inputPassword" placeholder="password" {{ on 'input' this.onPasswordChange}}>
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputPhotoUrl" class="col-sm-2 col-form-label">Photo url</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputPhotoUrl" placeholder="photo url" {{ on 'input' this.onPhotoURLChange}}>
      </div>
    </div>
    <div class="mb-3 row">
      <button class="btn btn-primary" type="submit">Register</button>
    </div>
  </form>
  <div>
    <span>Mam ju≈º konto. <LinkTo @route="login">Zarejestruj</LinkTo></span>
  </div>
</div>