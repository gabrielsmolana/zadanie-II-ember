{{page-title 'Show'}}
<Header>Post</Header>
<div class='card mx-auto' style='width: 18rem; margin: 1rem;'>
  <div class='card-body'>
    <h5 class='card-title'>{{ this.model.title }}</h5>
    <p class='card-text'>{{ this.model.body }}</p>
  </div>
  <ul class='list-group list-group-flush'>
    <li class='list-group-item'>Owner: {{ this.model.owner.username }}</li>
  </ul>
</div>
{{outlet}}